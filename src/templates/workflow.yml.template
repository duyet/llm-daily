name: "Task: {{taskName}}"

on:
  schedule:
    - cron: "{{schedule}}"
  workflow_dispatch:  # Allow manual triggering

permissions:
  contents: write  # Required for committing results

jobs:
  run-task:
    runs-on: ubuntu-latest
    timeout-minutes: {{timeout}}

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Build project
        run: npm run build

      - name: Run task
        run: npm run task:run {{taskName}}
{{#if secrets}}        env:
{{#each secrets}}
          {{name}}: ${{{{ secrets.{{secretKey}} }}}}
{{/each}}
{{/if}}

      - name: Build dashboard data
        run: npm run dashboard:build
        continue-on-error: true

      - name: Commit results
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"
          git add dashboard/data/ tasks/{{taskName}}/memory.md tasks/{{taskName}}/results/ || true
          if ! git diff --quiet || ! git diff --cached --quiet; then
            git commit -m "chore({{taskName}}): update results [skip ci]"
            git push
          else
            echo "No changes to commit"
          fi
