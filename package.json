{
  "name": "llm-daily",
  "version": "0.1.0",
  "description": "Scheduled LLM task automation with GitHub Actions",
  "type": "module",
  "keywords": [
    "llm",
    "automation",
    "github-actions",
    "openai",
    "cli",
    "scheduled-tasks",
    "promptfoo"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/llm-daily.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/llm-daily/issues"
  },
  "homepage": "https://github.com/yourusername/llm-daily#readme",
  "bin": {
    "llm-daily": "./dist/cli.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:all": "npm run build && npm run build:dashboard",
    "build:dashboard": "cd dashboard && tsc || true",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "validate": "npm run lint && tsc --noEmit && npm test run",
    "prepare": "husky",
    "task:new": "node dist/cli.js new",
    "task:generate": "node dist/cli.js generate",
    "task:run": "node dist/cli.js run",
    "task:list": "node dist/cli.js list",
    "task:validate": "node dist/cli.js validate",
    "dashboard:build": "node dist/scripts/build-dashboard-data.js",
    "dashboard:prerender": "node dashboard/scripts/prerender-dashboard.js"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "cron-parser": "^4.9.0",
    "dotenv": "^17.2.3",
    "glob": "^10.3.10",
    "inquirer": "^9.2.15",
    "js-yaml": "^4.1.0",
    "openai": "^4.28.0",
    "yaml": "^2.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^4.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
